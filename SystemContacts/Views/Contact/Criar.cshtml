@model ContactModel

@{
    ViewData["Title"] = "Criar um contato";
}

<div class="text-center">
    <h1 class="display-4">Adicionar um novo contato </h1>
</div>
<form aps-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group my-2">
        <label for="input-name">Nome</label>
        <input type="text" asp-for="Name" class="form-control" id="input-name" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group my-2">
        <label for="input-email">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="input-email" placeholder="Digite o email do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group my-2">
        <label for="input-contact">Contato</label>
        <input type="number" max="11" asp-for="Phone" class="form-control" id="input-contact" placeholder="Digite o celular do contato">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a role="button" class="btn btn-secondary btn-block" asp-controller="Contact" asp-action="Index">Voltar</a>
</form>